{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-[#F4F1DE]">
        <div class="bg-[#FFFFFF] bg-opacity-80 backdrop-blur-md p-8 rounded-lg shadow-lg w-full max-w-md transition-transform transform hover:scale-105">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-[#E07A5F] text-white p-2 rounded mb-4 text-center">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <h1 class="text-xl font-semibold text-[#3D405B] text-center mb-6">Créer un compte</h1>

            {{ form_start(registrationForm) }}
            <div class="mb-4">
                {{ form_label(registrationForm.email, 'Votre email', {'label_attr': {'class': 'block text-[#3D405B] mb-1'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 bg-[#F2F2F2] text-[#3D405B] rounded-md focus:outline-none focus:ring-2 focus:ring-[#81B29A]'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-[#3D405B] mb-1'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 bg-[#F2F2F2] text-[#3D405B] rounded-md focus:outline-none focus:ring-2 focus:ring-[#81B29A]'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="mb-4">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
                {{ form_label(registrationForm.agreeTerms, "J'accepte les conditions d'utilisation", {'label_attr': {'class': 'text-[#3D405B]'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="w-full bg-[#81B29A] hover:bg-[#679D7E] text-white font-semibold py-2 rounded-md transition">
                S'inscrire
            </button>
            {{ form_end(registrationForm) }}

            <p class="text-[#3D405B] text-sm text-center mt-4">
                Vous avez déjà un compte ?
                <a href="{{ path('app_login') }}" class="text-[#E07A5F] hover:underline">Connectez-vous</a>
            </p>
        </div>
    </div>
{% endblock %}