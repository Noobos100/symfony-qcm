{% extends 'base.html.twig' %}

{% block title %}Hello {{ email_first_part }}!{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-[#F4F1DE]">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-4xl">
            <h1 class="text-3xl font-semibold text-[#3D405B] mb-4">Hello {{ email_first_part }}! âœ…</h1>

            <p class="text-gray-700 mb-6">
                This friendly message is coming from:
            </p>

            <ul class="list-disc pl-5 text-gray-700 mb-6">
                <li>Your controller at <code class="bg-[#F2F2F2] text-[#3D405B] px-2 py-1 rounded">/home/cdaw/qcm/src/Controller/QcmController.php</code></li>
                <li>Your template at <code class="bg-[#F2F2F2] text-[#3D405B] px-2 py-1 rounded">/home/cdaw/qcm/templates/qcm/index.html.twig</code></li>
            </ul>

            <!-- Table containing users from the API -->
            <div class="overflow-x-auto bg-[#F9F9F9] p-4 rounded-lg shadow-sm">
                <table class="w-full table-auto border-separate border-spacing-0">
                    <thead>
                    <tr class="bg-[#F2F2F2] text-[#3D405B]">
                        <th class="px-4 py-2 border-b">id</th>
                        <th class="px-4 py-2 border-b">email</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr class="hover:bg-[#F2F2F2]">
                            <td class="px-4 py-2 border-b text-[#3D405B]">{{ user.id }}</td>
                            <td class="px-4 py-2 border-b text-[#3D405B]">{{ user.email }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
